@page "/company/{id:int}"

    <div class="container bg-white rounded border p-3">
        <div class="pl-3">
            <div class="row">
                <span style="font-size:18px; color:#8f8f8f;"><a href="/company" style="color:#6372C4">Companys</a> /  @id</span>
            </div>
            <div class="row pt-4">
                <a class="btn btn-primary" href="/company/edit/@id" style="background-color:#6372C4"><i class="far fa-edit"></i> Edit</a>
                <a class="btn border ml-1" href="/company/new"><i class="far fa-file"></i> New</a>
                <button class="btn border ml-5" @onclick="DeleteConfirm"><i class="far fa-trash-alt"></i> Delete</button>
            </div>
        </div>
    </div>

    <div class="container bg-white border box-shadow p-3 rounded">
        <CompanyForm CompanyVM="CompanyVM" Type="Details" />
    </div>


    @code {

        [Parameter] public int id { get; set; }
        [Inject] public ICompanyService CompanyService { get; set; }
        [Inject] public IJSRuntime JSRuntime { get; set; }
        [Inject] NavigationManager NavigationManager { get; set; }

        CompanyVM CompanyVM { get; set; } = new CompanyVM();

        protected override async Task OnInitializedAsync()
        {
            CompanyVM = await CompanyService.GetCompany(id);
        }

        protected async Task DeleteConfirm()
        {
            bool result = await JSRuntime.Confirm("Confirmation", $"Are you sure you want to delete {CompanyVM.Company.Name} ?", IJSRuntimeExtensionMethods.SweetAlertMessageType.question);
            if (result) await Delete();  
        }
        protected async Task Delete()
        {
            CompanyVM createdCompanyVM = await CompanyService.DeleteCompany(CompanyVM.Company.Id);

            if (string.IsNullOrEmpty(createdCompanyVM.Exception))
            {
                await JSRuntime.Notfication($"Companyment {CompanyVM.Company.Name} has been deleted successfully!", IJSRuntimeExtensionMethods.SweetAlertMessageType.success, 3000);
                NavigationManager.NavigateTo($"/company");
            }
            else
            {
                await JSRuntime.Notfication(createdCompanyVM.Exception, IJSRuntimeExtensionMethods.SweetAlertMessageType.error, 10000);
            }
        }
    }
